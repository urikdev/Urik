<resources>
    <!-- ============================================ -->
    <!-- CORE PALETTE -->
    <!-- ============================================ -->
    <color name="light_orange">#fcdebe</color>
    <color name="sage">#d4d2a5</color>
    <color name="battleship_gray">#928779</color>
    <color name="wenge">#5e5768</color>
    <color name="delft_blue">#3a445d</color>

    <!-- ============================================ -->
    <!-- SURFACE COLORS (inverted hierarchy) -->
    <!-- ============================================ -->
    <color name="surface_primary">@color/delft_blue</color>
    <color name="surface_secondary">@color/wenge</color>
    <color name="surface_accent">@color/wenge</color>
    <color name="surface_background">#2a2d3e</color>

    <!-- ============================================ -->
    <!-- CONTENT COLORS (light text on dark) -->
    <!-- ============================================ -->
    <color name="content_primary">@color/sage</color>
    <color name="content_secondary">@color/light_orange</color>
    <color name="content_on_accent">#FFFFFF</color>

    <!-- ============================================ -->
    <!-- INTERACTIVE STATES -->
    <!-- ============================================ -->
    <color name="state_pressed">@color/battleship_gray</color>
    <color name="state_activated">@color/battleship_gray</color>
    <color name="state_caps_lock">@color/wenge</color>

    <color name="key_background_disabled">@color/wenge</color>
    <color name="key_shadow_disabled">#0DFFFFFF</color>
    <color name="key_background_character_pressed">@color/state_pressed</color>
    <color name="key_focus_indicator">@color/focus_indicator</color>

    <color name="key_shadow_activated">@color/battleship_gray</color>
    <color name="key_background_action_activated">@color/state_activated</color>
    <color name="key_border_activated">@color/sage</color>
    <color name="key_background_action_pressed">@color/state_pressed</color>

    <!-- ============================================ -->
    <!-- KEYBOARD COLORS -->
    <!-- ============================================ -->

    <!-- Backgrounds -->
    <color name="keyboard_background">@color/surface_background</color>
    <color name="key_background_character">@color/surface_primary</color>
    <color name="key_background_action">@color/surface_secondary</color>
    <color name="key_background_space">@color/surface_primary</color>

    <!-- Text Colors -->
    <color name="key_text_character">@color/content_primary</color>
    <color name="key_text_action">@color/content_secondary</color>

    <!-- Borders -->
    <color name="key_border">@color/battleship_gray</color>
    <color name="key_border_focused">@color/sage</color>
    <color name="key_border_pressed">@color/light_orange</color>

    <color name="key_background_space_pressed">@color/state_pressed</color>

    <!-- ============================================ -->
    <!-- SUGGESTION BAR -->
    <!-- ============================================ -->
    <color name="suggestion_bar_background">@color/surface_accent</color>
    <color name="suggestion_text">@color/content_primary</color>

    <!-- ============================================ -->
    <!-- ACCESSIBILITY & SHADOWS -->
    <!-- ============================================ -->
    <color name="focus_indicator">@color/light_orange</color>
    <color name="key_shadow">#1AFFFFFF</color>

    <!-- ============================================ -->
    <!-- LEGACY COMPATIBILITY -->
    <!-- ============================================ -->
    <color name="primary">@color/battleship_gray</color>
    <color name="secondary">@color/sage</color>
</resources>
