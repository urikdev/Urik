<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="@dimen/key_corner_radius" />
        </shape>
    </item>
    <item>
        <selector>
            <!-- Disabled state -->
            <item android:state_enabled="false">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <solid android:color="@color/key_background_disabled" />
                            <corners android:radius="@dimen/key_corner_radius" />
                        </shape>
                    </item>
                </layer-list>
            </item>

            <!-- Activated state (caps lock specific - orange) -->
            <item android:state_activated="true">
                <layer-list>
                    <item android:top="2dp" android:left="1dp">
                        <shape android:shape="rectangle">
                            <solid android:color="@color/state_caps_lock" />
                            <corners android:radius="@dimen/key_corner_radius" />
                        </shape>
                    </item>
                    <item android:bottom="2dp" android:right="1dp">
                        <shape android:shape="rectangle">
                            <solid android:color="@color/state_pressed" />
                            <corners android:radius="@dimen/key_corner_radius" />
                            <stroke android:width="2dp" android:color="@color/state_caps_lock" />
                        </shape>
                    </item>
                </layer-list>
            </item>

            <!-- Pressed state -->
            <item android:state_pressed="true">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <solid android:color="@color/key_background_action_pressed" />
                            <corners android:radius="@dimen/key_corner_radius" />
                            <stroke android:width="1dp" android:color="@color/key_border_pressed" />
                        </shape>
                    </item>
                </layer-list>
            </item>

            <!-- Focused state -->
            <item android:state_focused="true">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <solid android:color="@color/key_background_action" />
                            <corners android:radius="@dimen/key_corner_radius" />
                            <stroke android:width="2dp" android:color="@color/key_border_focused" />
                        </shape>
                    </item>
                    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
                        <shape android:shape="rectangle">
                            <stroke android:width="1dp" android:color="@color/key_focus_indicator" />
                            <corners android:radius="@dimen/key_corner_radius_small" />
                        </shape>
                    </item>
                </layer-list>
            </item>

            <!-- Default state -->
            <item>
                <layer-list>
                    <item android:top="2dp" android:left="1dp">
                        <shape android:shape="rectangle">
                            <solid android:color="@color/key_shadow" />
                            <corners android:radius="@dimen/key_corner_radius" />
                        </shape>
                    </item>
                    <item android:bottom="2dp" android:right="1dp">
                        <shape android:shape="rectangle">
                            <solid android:color="@color/key_background_action" />
                            <corners android:radius="@dimen/key_corner_radius" />
                            <stroke android:width="1dp" android:color="@color/key_border" />
                        </shape>
                    </item>
                </layer-list>
            </item>
        </selector>
    </item>
</ripple>